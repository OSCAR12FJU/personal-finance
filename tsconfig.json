{
 "compilerOptions": {
    "target": "ES2022",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}